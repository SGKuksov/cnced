mixin pagination()

  .pagination
    ul.pagination__list
      li.pagination__item
        a.pagination__link(href="#") 1
      li.pagination__item
        a.pagination__link(href="#") 2
      li.pagination__item
        a.pagination__link(href="#") 3
      li.pagination__item
        a.pagination__dots ...
      li.pagination__item
        a.pagination__link(href="#") 6
      li.pagination__item.pagination__item-next
        a.pagination__link(href="#")
